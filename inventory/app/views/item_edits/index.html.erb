<p id="notice"><%= notice %></p>

<h1>Items History of Edits</h1>

<% if not @item_edits %>
  <p> No edits to show.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Field</th>
        <th>old_value</th>
        <th>new_value</th>
        <th>user</th>
        <th>date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @item_edits.each do |edit| %>
        <tr>
          <td><%= edit.item_id %></td>
          <td><%= edit.field_name %> </td>
          <% if edit.field_name.include?("picture") or
              edit.field_name.include?("invoice") %>
            <td>photo</td>
            <td>photo</td>
          <% else %>
            <td><%= edit.old_value %></td>
            <td><%= edit.new_value %></td>
          <%end%>
          <td><%= edit.user_id %></td>
          <td><%= edit.created_at %></td>
          <td> ------------- </td>
          <td><%= link_to 'Destroy', edit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>
