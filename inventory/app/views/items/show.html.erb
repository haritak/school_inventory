<p id="notice"><%= notice %></p>

<p>
  <strong>Serial:</strong>
  <%= @item.serial %>
</p>

<p>
  <strong>Category:</strong>
  <%= @item.item_category.category if @item.item_category %>
</p>

<p>
  <strong>Description:</strong>
  <%= @item.description %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @item.quantity %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @item.note %>
</p>

<p>
  <strong>Page URL:</strong>
  <% if @item.page_url %>
    <a href=<%= @item.page_url %>><%= @item.page_url %></a>
  <% else %>
    none
  <% end %>
</p>

<p>
<strong>Photo:</strong>
  <% if @item.photo_data %>
    <br>
    <a target="_blank" href=<%= url_for(action: :picture, id: @item.id ) %>>
      <img width=320 src=<%= url_for(action: :picture, id: @item.id ) %> />
    </a>
  <% else %>
    none
  <% end %>
</p>

<p>
  <strong>Second photo:</strong>
  <% if @item.photo_data2 %>
    <br>
    <a target="_blank" href=<%= url_for(action: :second_picture, id: @item.id) %> >
      click for the second picture
    </a>
  <% else %>
    none
  <% end %>
</p>

<p>
  <strong>Invoice:</strong>
  <% if @item.invoice %>
    <a href=<%= url_for(action: :invoice, id: @item.id) %> >PDF</a>
  <% else %>
    none
  <% end %>
</p>

<p>
  <strong>Container : </strong>
  <% if @item.container.nil? %>
    none
  <% else %>
    <%= @item.container.serial %> (<%= @item.container.description %>) <!-- my container -->
  <% end %>
</p>

<p>
  <strong>Container : </strong>
  <%= @item.container %>
</p>

<p>Last edited by <%= @item.user.username %> </p>


<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
