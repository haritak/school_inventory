<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
  <fieldset>
    <legend>Please login</legend>
    <%= label_tag :username, "Username:" %> 
    <%= text_field_tag :username, params[ :username ] %>

    <%= label_tag :password, "Password:" %> 
    <%= password_field_tag :password, params[ :password ] %>


    <%= submit_tag "Login" %>
  </fieldset>
<% end %>


